            <button type="submit" class="btn btn-outline-success" style="margin-top: 10px;">送出</button>
        </div>
      </form>



      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

      <script>

function cccopy(i){
        var ElementName= document.getElementById("Name_"+i)
        var ElementName_Id= document.getElementById("Name_Id_"+i)
        var ElementEmail= document.getElementById("Email_"+i)
        var ElementAffiliated_Institution = document.getElementById("Affiliated_Institution_"+i)
        var ElementCountry= document.getElementById("Country_"+i)
    
            opener.document.getElementById('Email').value = ElementEmail.innerHTML;
            opener.document.getElementById('Name').value = ElementName.innerHTML;
            opener.document.getElementById('Name_Id').value = ElementName_Id.innerHTML;
            opener.document.getElementById('Affiliated_Institution').value = ElementAffiliated_Institution.innerHTML;
            opener.document.getElementById('Country').value = ElementCountry.innerHTML;
}
        
      </script>

</body>