<body>
    <h3>Name</h3>
    <form name="Form1" method="post" action="">
      <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered" >
                <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Name_Id</th>
                    <th scope="col">Email</th>
                    <th scope="col" size="10px" >Affiliated_Institution</th>
                    <th scope="col">Country</th>
                    <th scope="col">複製</th>
                </tr>
                </thead>

                <tbody>
                    <%   for(var i=0; i< Name.length; i++) { %>
                    <tr></tr>
                        <td type="text"  name="id" value= <%i%> ><%=i%></td>
                        <td type="text" id="Name_<%=i%>" name="Name_<%=i%>" value="<%= Name[i]%>" ><%= Name[i]%></td>
                        <td type="text" id="Name_Id_<%=i%>" name="Name_Id_<%=i%>" value="<%= Name_Id[i]%>"><%= Name_Id[i]%></td>
                        <td type="text" id="Email_<%=i%>" name="Email_<%=i%>" value="<%= Email[i]%>"><%= Email[i]%></td>
                        <td type="text" id="Affiliated_Institution_<%=i%>" name="Affiliated_Institution_<%=i%>" value="<%= Affiliated_Institution[i]%>"><%= Affiliated_Institution[i] %></td>
                        <td type="text" id="Country_<%=i%>" name="Country_<%=i%>" value="<%= Country[i]%>"><%= Country[i]%></td>
                        <td> <input class="btn btn-info" type="button" value="click" onclick="cccopy(<%=i%>);"></td>
                    </tr>
    
                    <% } %>    
                </tbody>

            </table>

        </div>
    </div>
</form>   

      <form action="/Name_list1" method="POST">
        <h4 class="Name">請輸入查詢Name :</h4>
        <div class="form2" id="TextBoxDiv2">
